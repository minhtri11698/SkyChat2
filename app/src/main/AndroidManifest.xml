<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.skychat">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".Class.Function"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.ChatActivity"
            android:parentActivityName=".Activity.MainActivity" />
        <activity
            android:name=".Activity.AllUsersActivity"
            android:parentActivityName=".Activity.MainActivity" />
        <activity
            android:name=".Activity.UserProfileActivity"
            android:parentActivityName=".Activity.AllUsersActivity" />
        <activity
            android:name=".Activity.EditPasswordActivity"
            android:parentActivityName=".Activity.AccountSettingsActivity" />
        <activity
            android:name=".Activity.EditInforActivity"
            android:parentActivityName=".Activity.AccountSettingsActivity" />
        <activity
            android:name=".Activity.AccountSettingsActivity"
            android:parentActivityName=".Activity.MainActivity" />
        <activity android:name=".Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.StartActivity" />
        <activity
            android:name=".Activity.LogInActivity"
            android:parentActivityName=".Activity.StartActivity" />
        <activity
            android:name=".Activity.SignUpActivity"
            android:parentActivityName=".Activity.StartActivity" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>