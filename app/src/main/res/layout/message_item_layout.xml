<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/avatardefault"
        android:id="@+id/receiverAvatarView"
        android:layout_marginTop="3dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="3dp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/messageContentView"
        android:layout_toEndOf="@id/receiverAvatarView"
        android:textColor="#000"
        android:text="Content"
        android:textSize="20sp"
        android:background="@drawable/message_item_shape"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:maxWidth="310dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:id="@+id/receivedTime"
        android:text="asdhaskjdhas"
        android:layout_marginEnd="8dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textColor="#000"/>
    <ImageView
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:src="@drawable/avatardefault"
        android:id="@+id/imageMessageReceived"
        android:layout_below="@id/messageContentView"
        android:layout_toEndOf="@id/receiverAvatarView"

        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:scaleType="fitCenter"
        />

</RelativeLayout>