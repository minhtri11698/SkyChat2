<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/messageSenderContentView"
        android:textColor="#fff"
        android:text="Content"
        android:textSize="20sp"
        android:background="@drawable/mesage_item_sender"
        android:layout_alignParentEnd="true"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="10dp"
        android:maxWidth="310dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:id="@+id/sendTime"
        android:text="asdhaskjdhas"
        android:layout_marginStart="8dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"

        android:textColor="#000"/>

    <ImageView
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:src="@drawable/avatardefault"
        android:id="@+id/imageMessageSender"
        android:layout_below="@id/messageSenderContentView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="12dp"
        android:scaleType="fitCenter"
        />

</RelativeLayout>