<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundloginpic"
    android:id="@+id/loginlayout">

    <include layout="@layout/app_bar_layout" android:id="@+id/login_tool_bar" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:srcCompat="@drawable/logo"
        android:layout_below="@id/login_tool_bar"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:id="@+id/signinlogo"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginemailtext"
        android:layout_below="@id/signinlogo"
        android:textColor="@color/whitecolor"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="Your email:"
        android:textSize="18sp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginemailtext"
        android:layout_marginTop="10dp"
        android:background="@color/whitecolor"
        android:hint="@string/email"
        android:padding="6dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:singleLine="true"
        android:inputType="textEmailAddress"
        android:id="@+id/loginemailinput"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginpwdtext"
        android:layout_below="@id/loginemailinput"
        android:textColor="@color/whitecolor"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:text="Password:"
        android:textSize="18sp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginpwdtext"
        android:layout_marginTop="10dp"
        android:background="@color/whitecolor"
        android:hint="Password"
        android:padding="6dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:singleLine="true"
        android:id="@+id/loginpwdinput"
        android:inputType="textPassword"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginpwdinput"
        android:layout_centerInParent="true"
        android:id="@+id/userloginbtn"
        android:text="Log In"
        android:layout_marginTop="30dp"
        android:textSize="15sp"
        android:background="@color/logincolor"
        android:textColor="@color/whitecolor"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/skyappname"
        android:textColor="@color/whitecolor"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        />

</RelativeLayout>